{% extends 'base.html.twig' %}

{% block page_title %}Table view{% endblock %}

{% block page_content %}
    <table id="test">
        <tr>
            {% for header in headers %}
                <th>{{ header }}</th>
            {% endfor %}
        </tr>
        {% for entity in entities %}
            <tr>
                {% for key, value in headers %}
                    <td>{{ attribute(entity, key) }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
