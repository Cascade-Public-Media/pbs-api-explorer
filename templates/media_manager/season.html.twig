{% extends 'entity_dump.html.twig' %}
{% import '@AdminLTE/Macros/buttons.html.twig' as btn %}

{% block page_content %}

    <div class="well well-sm">
        {% block datatable_actions %}
            {{ btn.link_button(
                'View Show',
                path('media_manager_shows_show', {id: entity.show.id}),
                'fas fa-tv',
                'info',
                'xs')
            }}
            {{ btn.link_button(
                'List Episodes',
                path('media_manager_episodes') ~ '#search[search]=' ~ entity.id,
                'fas fa-list',
                'info',
                'xs')
            }}
        {% endblock %}
    </div>

    {{ parent() }}

{% endblock %}